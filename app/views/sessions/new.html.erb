

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag do %>

      <%= label_tag :email, 'Email' %>
      <%= email_field_tag :email, params[:email],class: 'form-control' %>

      <%= label_tag :password, 'Passowrd' %>
      <%= password_field_tag :password, params[:password],class: 'form-control' %>
      
      
      <label class="checkbox inline" %>
        <%= check_box_tag :remember_me,params[:remember] %>
        <span>Remember me on this computer</span>
      </label>

      <%= submit_tag "Log in", class: "btn btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", new_user_path %></p>
  </div>
</div>
