<h1>Myzims</h1>
<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>
  
  <tbody>
    <% @zims.each do |zim| %>
      <tr>
        <td><%= link_to zim.name, zim%></td>
        <td><%= zim.description%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
  <%= link_to 'My Profile', edit_user_path(@user) %>
  <%= link_to 'Create a Zim', new_zim_path %>
</div>

