<h1>My Zims</h1>

<table class="table">
<% @zims.each do |zim| %>
  <tr>
    <td>
      <%= image_tag(zim.image_url, class: 'list_image') %>
    </td>
    <td class="list_description">
      <dl>
        <dt><%= zim.name %></dt>
        <dd><%= truncate(strip_tags(zim.description), length: 80) %></dd>
      </dl>
    </td>
    <td class = "list_actions">
      <%= link_to 'Show', zim %><br>
      <%= link_to 'Unsubscirbe',zim%>
    </td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'Create a new Zim', new_zim_path %><br/>
<%= link_to 'Search',zims_path %><br>
<%= link_to 'My Profile',@user%>

