<p id="notice"><%= notice %></p>  
<h1>Listing Zims</h1>


<table class="table table-hover">
<% @zims.each do |zim| %>
  <tr>
    <td>
      <%= image_tag(zim.image_url, class: 'list_image') %>
    </td>
    <td>
      <dl>
        <dt><%= zim.name %></dt>
        <dd><%= truncate(strip_tags(zim.description), length: 80) %></dd>
      </dl>
    </td>
    <td>
      <%= link_to 'Show', zim %><br/>
      <%= button_to 'Subscirbe', subscriptions_path(zim_id: zim.id) ,class: "btn btn-info btn-sm"%><br/>
    </td>
  </tr>
<% end %>
</table>



